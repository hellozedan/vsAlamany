@model almany.ContactU

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="head">
    <div class="line">
        <h1>צור קשר</h1>
    </div>
</div>
<div id="content" class="left-align contact-page">
    <div class="line">
        <div class="margin">
            <div class="s-12 l-6" style="float: left;text-align: left;">
                <h2>Vision Design - graphic zoo</h2>
                <address>
                    <p><i class="icon-home icon"></i> Gallayova 19, 841 02 Bratislava</p>
                    <p><i class="icon-globe_black icon"></i> Slovakia - Europe</p>
                    <p><i class="icon-mail icon"></i> info@visiondesign.sk</p>
                </address>
                <br />
                <h2>Social</h2>
                <p><i class="icon-facebook icon"></i> <a href="https://www.facebook.com/pages/Vision-Design-graphic-ZOO/154664684553091">Vision Design - graphic zoo</a></p>
                <p><i class="icon-facebook icon"></i> <a href="https://www.facebook.com/myresponsee">Responsee</a></p>
                <p class="margin-bottom"><i class="icon-twitter icon"></i> <a href="https://twitter.com/MyResponsee">Responsee</a></p>
            </div>
            <div class="s-12 l-6">
                <h2>יצירת קשר</h2>

@using (Html.BeginForm("Index", "ContactUs", FormMethod.Post, new { enctype = "multipart/form-data", @class = "customform" }))
{
    //   <form class="customform" action="">
                   
                    <div class="s-12 l-7">
                        @Html.EditorFor(model => model.email,new { htmlAttributes = new { @placeholder = "מייל" } }  )
                        @Html.ValidationMessageFor(model => model.email)
                @*<input name="email" placeholder="מייל" title="Your e-mail" type="text" />*@
                    </div>
                    
                    <div class="s-12 l-7">
                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @placeholder = "פלאפון" } }  )
                        @Html.ValidationMessageFor(model => model.phone)


                @*<input name="phone" placeholder="פלאפון" title="Your phone" type="tel" />*@
                    </div>
                       <div class="s-12 l-7">
                           @Html.EditorFor(model => model.name,new { htmlAttributes = new { @placeholder = "שם" } }  )
                           @Html.ValidationMessageFor(model => model.name)
                @*<input name="name" placeholder="שם" title="Your name" type="text" />*@
                       </div>

    <div class="s-12">
        @Html.TextAreaFor(model => model.messag, new { @rows = 5, @placeholder =  "נושא הפנייה" })
        @Html.ValidationMessageFor(model => model.messag)
        @*<textarea placeholder="נושא הפנייה" name="messag" rows="5"></textarea>*@
    </div>
                    <div class="s-4"><button type="submit">שלח</button></div>
    //    </form>

}


            </div>
        </div>
    </div>
</div>
